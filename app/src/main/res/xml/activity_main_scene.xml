<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000">
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="0.7"
                android:scaleY="0.7"
                motion:framePosition="20"
                motion:motionTarget="@+id/iv_motion_1" />

            <KeyAttribute
                android:rotation="360"
                motion:framePosition="50"
                motion:motionTarget="@+id/iv_motion_1" />
            <KeyTrigger
                motion:framePosition="40"
                motion:motionTarget="@id/iv_motion_1"
                motion:onNegativeCross="show"
                motion:onPositiveCross="hide" />


            <KeyAttribute
                android:scaleX="2"
                android:scaleY="2"
                motion:framePosition="50"
                motion:motionTarget="@+id/iv_motion_1">
                <CustomAttribute
                    motion:attributeName="colorFilter"
                    motion:customColorValue="#007766" />
            </KeyAttribute>

            <KeyPosition
                motion:framePosition="20"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@id/iv_motion_1"
                motion:percentX="0.3"
                motion:percentY="0.5" />
            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@id/iv_motion_1"
                motion:percentY="0.8" />
            <KeyPosition
                motion:framePosition="80"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@id/iv_motion_1"
                motion:percentY="0.3" />
            <KeyAttribute
                android:alpha="0.3"
                motion:framePosition="50"
                motion:motionTarget="@+id/iv_motion_1" />
        </KeyFrameSet>
        <!--        <OnSwipe
                    motion:targetId="@id/iv_motion_1"
                    motion:touchAnchorSide="middle"
                    motion:touchAnchorId="@id/iv_motion_1" />-->
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@id/iv_motion_1"
            motion:touchAnchorSide="middle" />

<!--        motion:onTouchUp="stop"-->
        <!--        <OnClick motion:targetId="@id/iv_motion_1" />-->


    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/iv_motion_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.013"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="1.0">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="#484736" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/iv_motion_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.991"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.995">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="#FFB612" />
        </Constraint>
    </ConstraintSet>


</MotionScene>